<!DOCTYPE html>
<html>
  <head>
    <title>Photon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
      <%= link_to 'Photon', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div>
        <% if user_signed_in? %>
          <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'text-secondary text-right' %>
        <% else %>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'text-secondary' %>
          |
          <%= link_to 'Sign In', new_user_session_path, class: 'text-secondary' %>
        <% end %>
      </div>
    </nav>


    <%= yield %>
  </body>
</html>
