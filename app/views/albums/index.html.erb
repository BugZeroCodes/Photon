<p id="notice"><%= notice %></p>

<h1>Albums</h1>

<table class='table'>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.user.email %></td>
        <td><%= album.date.strftime "%m/%d/%Y" %></td>
        <td><%= album.name %></td>
        <td><%= link_to 'Show', album, class: 'btn btn-success' %></td>
        <% if policy(album).update? %>
        <td><%= link_to 'Edit', edit_album_path(album), class: 'btn btn-warning' %></td>
        <% end %>
        <% if policy(album).destroy? %>
        <td><%= link_to 'Delete', album, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Album.new).create? %>
<%= link_to 'Add Album', new_album_path, class: "btn btn-primary" %>
<% end %>
